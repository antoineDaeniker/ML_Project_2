{
    "seed" : 4,

    "training":{
        "lr"           : 0.0005,
        "epochs"       : 100,
        "opt"          : "adam",
        "weight_decay" : 5e-5,
        "batch_size"   : 5000,
        "gamma"        : 1.5
    },

    "dataset":{
        "normalize"             : false,
        "standardize"           : true,
        "nonmaxima_suppresion"  : false,
        "data_augmentation"     : false
    },

    "architecture":{
        "encoder_channels": [1, 64],
        "decoder_channels": [64],
        "dropout"         : 0.1,
        "attention"       : true,
        "retain_dim"      : true
    },

    "evaluation":{
        "threshold"       : 0.5
    }
}