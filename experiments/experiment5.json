{
    "seed" : 4,

    "training":{
        "lr"           : 0.0001,
        "epochs"       : 200,
        "opt"          : "adam",
        "weight_decay" : 1e-4,
        "batch_size"   : 128,
        "gamma"        : 1.5
    },

    "dataset":{
        "normalize"             : false,
        "standardize"           : true,
        "nonmaxima_suppresion"  : false
    },

    "architecture":{
        "encoder_channels": [3, 64, 128, 256],
        "decoder_channels": [256, 128, 64],
        "dropout"         : 0.2,
        "retain_dim"      : true
    },

    "evaluation":{
        "threshold"       : 0.5
    }
}