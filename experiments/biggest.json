{
    "seed" : 4,

    "training":{
        "lr"           : 0.005,
        "epochs"       : 20,
        "opt"          : "adam",
        "weight_decay" : 1e-3,
        "batch_size"   : 5000,
        "gamma"        : 1.5
    },

    "dataset":{
        "normalize"             : true,
        "standardize"           : false,
        "nonmaxima_suppresion"  : false,
        "data_augmentation"     : true
    },

    "architecture":{
        "encoder_channels": [1, 32, 64, 128],
        "decoder_channels": [128, 64, 32],
        "dropout"         : 0.2,
        "attention"       : true,
        "retain_dim"      : true
    },

    "evaluation":{
        "threshold"       : 0.5
    }
}